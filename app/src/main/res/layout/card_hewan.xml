<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#A86F5B">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#EFECE2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/studentofclass_CardView"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#DDB4A6"
                app:cardCornerRadius="25dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#80202020"
                app:strokeWidth="0.05dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/animaldisplay1_imageView"
                        android:layout_width="107dp"
                        android:layout_height="92dp"
                        android:layout_marginStart="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:translationZ="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_baseline_image_24" />

                    <TextView
                        android:id="@+id/namaHewan1_textView"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Nama Hewan"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:translationZ="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/animaldisplay1_imageView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/editHewan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#009688"
                        android:text="Edit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/usiaHewan1_textView"
                        app:layout_constraintTop_toBottomOf="@+id/usiaHewan1_textView" />

                    <TextView
                        android:id="@+id/jenisHewan1_textView"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="28dp"
                        android:text="Jenis Hewan"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="@+id/namaHewan1_textView"
                        app:layout_constraintTop_toBottomOf="@+id/namaHewan1_textView" />

                    <Button
                        android:id="@+id/deleteHewan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#F44336"
                        android:text="Delete"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/editHewan_button"
                        app:layout_constraintTop_toTopOf="@+id/editHewan_button" />

                    <TextView
                        android:id="@+id/usiaHewan1_textView"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:text="Usia Hewan"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="@+id/jenisHewan1_textView"
                        app:layout_constraintTop_toBottomOf="@+id/jenisHewan1_textView" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>